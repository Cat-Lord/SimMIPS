<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--<?import org.fxmisc.flowless.VirtualizedScrollPane?>
<?import org.fxmisc.richtext.CodeArea?>-->

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.catheaven.primeWindow.PrimeWindowController">
   <bottom>
      <HBox prefHeight="15.0" prefWidth="1920.0" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <VBox fx:id="topBorderPane" style="-fx-background-color: #6c6c6c;" BorderPane.alignment="CENTER">
         <children>
            <MenuBar styleClass=".menuPanel">
               <menus>
                  <Menu mnemonicParsing="false" text="File">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Open" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Save As..." />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="View">
                    <items>
                      <MenuItem fx:id="zoomInMenuItem" mnemonicParsing="false" text="Zoom In" />
                        <MenuItem fx:id="zoomOutMenuItem" mnemonicParsing="false" text="Zoom out" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Code">
                    <items>
                      <MenuItem fx:id="assembleMenuItem" mnemonicParsing="false" text="Assemble" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Simulation">
                     <items>
                        <MenuItem fx:id="playMenuItem" mnemonicParsing="false" text="Play" />
                        <MenuItem fx:id="playFastMenuItem" mnemonicParsing="false" text="Play Fast" />
                        <MenuItem fx:id="stepMenuItem" mnemonicParsing="false" text="Step Cycle" />
                        <MenuItem fx:id="pauseMenuItem" mnemonicParsing="false" text="Pause" />
                        <MenuItem fx:id="resetMenuItem" mnemonicParsing="false" text="Reset" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <fx:include source="ControlPanel.fxml" />
         </children>
      </VBox>
   </top>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <TabPane fx:id="tabPane" focusTraversable="false" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <tabs>
                  <Tab fx:id="codeTab" closable="false" style="-fx-padding: 10 25 10 25;" text="Code" />
                  <Tab fx:id="datapathTab" closable="false" style="-fx-padding: 10 25 10 25;" text="CPU" />
               </tabs>
            </TabPane>
         </children>
      </AnchorPane>
   </center>
   <right>
      <AnchorPane style="-fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER_LEFT">
         <children>
            <fx:include source="InstructionsTable.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
   </right>
</BorderPane>
