<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="%highlight{%d{HH:mm} [%t] %-5level} %logger{36} - %msg%n"/>
        </Console>
        <Console name="SimpleOutput" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="%highlight{%c{2} - %6.6p } %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="SimpleOutput"/>
        </Root>
    </Loggers>
</Configuration>