<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--<?import org.fxmisc.flowless.VirtualizedScrollPane?>
<?import org.fxmisc.richtext.CodeArea?>-->

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="102.0" prefWidth="305.0">
         <children>
            <HBox alignment="CENTER" prefHeight="81.0" prefWidth="305.0" spacing="15.0">
               <children>
                  <TextField fx:id="addressInput" prefHeight="26.0" prefWidth="152.0" promptText="Search Address" />
                  <Button mnemonicParsing="false" onAction="#filterTable" text="Search" />
               </children>
               <padding>
                  <Insets left="4.0" right="5.0" />
               </padding>
            </HBox>
            <Label fx:id="warning" text="Please, enter address (number)" textFill="RED" visible="false">
               <VBox.margin>
                  <Insets bottom="12.0" left="70.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <ScrollPane prefHeight="446.0" prefWidth="305.0">
         <content>
            <TableView fx:id="dataTable" prefHeight="442.0" prefWidth="305.0">
               <columns>
                  <TableColumn fx:id="addressColumn" prefWidth="115.0" resizable="false" sortable="false" text="Address" />
                  <TableColumn fx:id="valueColumn" prefWidth="172.0" resizable="false" sortable="false" text="Value" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </content>
      </ScrollPane>
   </children>
</VBox>
